<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:AvaloniaApplication.ViewModels.Tabs.MeasurementUnits"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication.Views.Tabs.MeasurementUnits.MeasurementUnitsView"
			 x:DataType="vm:MeasurementUnitsViewModel">
<Grid>
	<Grid.RowDefinitions>
		<RowDefinition Height="*"/>
		<RowDefinition Height="0.3*"/>
	</Grid.RowDefinitions>
    <DataGrid x:Name="MeasurementUnits" Grid.Row="0"
		SelectedItem="{Binding SelectedItem}"
		ItemsSource="{Binding MeasurementUnits}">
		<DataGrid.Columns>
			<DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
			<DataGridTemplateColumn Header="Delete">
				<DataGridTemplateColumn.CellTemplate>
					<DataTemplate>
						<Button Command="{Binding DeleteMeasurementUnitCommand}" Content="Delete"/>
					</DataTemplate>
				</DataGridTemplateColumn.CellTemplate>
			</DataGridTemplateColumn>
		</DataGrid.Columns>
    </DataGrid>
    <Button Grid.Row="1" Command="{Binding AddMeasurementUnitCommand}" HorizontalAlignment="Center" Margin="0,20,0,0">Add new</Button>
</Grid>
</UserControl>
